<div class="recent-container">
	<div class="recent-inner">
		{% for post in postslist | reverse %}
			<div>
				<p class="sans-serif tags">
		            {{ post.data.date | readableDate }} â€”
		            {% for tag in post.data.tags %}
		                {%- if tag != "post" -%}
		                    {% set tagUrl %}/tags/{{ tag }}/{% endset %}
		                    <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
		                {%- endif -%}
		            {% endfor %}
		        </p>
				<h3>
					{% if post.data.title %}
						<a href="{{ post.url | url }}" {% if post.url == url %} data-current="current item"{% endif %}>{{ post.data.title }}</a>
					{% else %}
						Untitled
					{% endif %}
				</h3>
			</div>
		{% endfor %}
	</div>
</div>
