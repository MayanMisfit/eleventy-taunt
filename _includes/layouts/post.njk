---
layout: layouts/base-post.njk
section: post
---

<div class="container" aria-label="individual post">

    <div class="inner-container" style="padding-bottom: 0;padding-top: 0;">
      {% include "components/nav.njk" %}
    </div>

    <div class="inner-container">

        <p><small>
           {% for tag in tags %}
          {%- if tag != "post" -%}
            {% set tagUrl %}/tags/{{ tag }}/{% endset %}
            <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
          {%- endif -%}
        {% endfor %}
      </small></p>

      {{ layoutContent | safe }}

        <p> &gt;&gt; <a href="/posts">End of File &#x2192;</a></p>


    </div>

</div>
