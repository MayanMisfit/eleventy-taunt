<!doctype html>
<html {% if section %} data-current="{{ section }}"{% endif %} lang="en">

    {% include "components/head-post.njk" %}

    <body>

        {{ layoutContent | safe }}

        <div class="recent-container">
            <div class="recent-inner">
                <h2>Recent posts</h2>
                {% set postslist = collections.postsLatest %}
                    {% for post in postslist | reverse %}
                    <div>
                        <p class="sans-serif">
                            {{ post.data.date | readableDate }} â€”
                            {% for tag in post.data.tags %}
                                {%- if tag != "post" -%}
                                    {% set tagUrl %}/tags/{{ tag }}/{% endset %}
                                    <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
                                {%- endif -%}
                            {% endfor %}
                        </p>
                        <h3><a href="{{ post.url | url }}">{{ post.data.title }}</a></h3>
                    </div>
                    {% endfor %}
                <h4><a href="/posts">Read all posts &#x2192;</a></h4>
            </div>
        </div>

        {% include "components/footer.njk" %}

    </body>

</html>
